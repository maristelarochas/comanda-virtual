{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "noEmit": false,
    "outDir": "dist/preload",
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/preload/**/*"
  ],
  "exclude": [
    "dist/preload"
  ]
}
